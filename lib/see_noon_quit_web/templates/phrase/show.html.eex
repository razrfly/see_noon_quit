<main class="container">
  <%= if @phrase do %>
    <h2>Anagrams for "<%= @phrase %>"</h2>

    <div class="row">
      <%= for anagram <- @anagrams do %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <span class="anagram"><%= anagram %></span>
        </div>
      <% end %>
    </div>
  <% end %>
</main>
